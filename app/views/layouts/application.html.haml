  %head
    %meta{charset: 'utf-8'}

    %title= content_for?(:title) ? yield(:title) : 'Peppermind'
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}
    %meta{name: 'description', content: content_for?(:description) ? yield(:description) : ''}
