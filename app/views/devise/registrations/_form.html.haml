= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = devise_error_messages!

  = f.input :display_name, placeholder: t('authentication.placeholder.display_name'), autofocus: true
  = f.input :email, placeholder: t('authentication.placeholder.email')
  = f.input :email_confirmation, placeholder: t('authentication.placeholder.email_confirm')
  = f.input :password, placeholder: t('authentication.placeholder.password')
  = f.button :submit, class: 'green-button'
