= title t('.title')

= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, defaults: { input_html: { class: 'styled_input' } } do |f|
  = devise_error_messages!
  = f.input :email, autofocus: true, placeholder: 'E-Mail-Adresse'
  = f.submit t('.submit'), class: 'btn btn-green'
