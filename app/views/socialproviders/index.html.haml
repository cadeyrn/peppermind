%section
  %h1= t('.title')

  %div
    %h2= t('.caption.linked')

    - (@providers_user).each do |socialprovider|
      %div
        = socialprovider.provider
        %div
          #{t('.provider.name')}: #{socialprovider.display_name} (ID: #{socialprovider.uid})
        %div
          #{t('.provider.email')}: #{socialprovider.email}
        %div
          = link_to t('.link.remove_service.text'), socialprovider, :confirm => t('.link.remove_service.confirmation'), method: :delete

    %div
      %h2= t('.caption.suggested')
      %div
        - (@providers_suggested).each do |provider|
          - case provider
            - when 'persona'
              = link_to 'Mozilla Persona', '/auth/persona/', id: 'mozilla-persona'
            - when 'facebook'
              = link_to 'Facebook', '/auth/facebook/'
            - when 'google'
              = link_to 'Google', '/auth/google/'
            - when 'twitter'
              = link_to 'Twitter', '/auth/twitter/'

      %p= t('.bottomline')
