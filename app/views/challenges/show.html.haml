= title @challenge.question

= @challenge.description

= render 'challenges/count_ditos'
- if current_user != @challenge.user && current_user
  = render 'ditos/form'

#{t('.created', user: @challenge.user.display_name)}
= time @challenge.created_at
%div= @challenge.duration_string

%p
  #{t('.updated')} #{time @challenge.updated_at}

%h3= t('tags.title')

%ul
  - @challenge.tags_array.each do |tag|
    %li
      = link_to tag, tag_path(URI.escape(tag))

%nav
  = link_to t('.link.dashboard'), root_path
  = link_to t('.link.challenges'), challenges_path
  = link_to t('.link.inspiration'), new_challenge_inspiration_path(@challenge.id)

  - if can? :update, @challenge
    = link_to t('.link.edit'), edit_challenge_path(@challenge)

  - if can? :destroy, @challenge
    = link_to t('.link.delete'), challenge_path(@challenge), method: :delete, confirm: t('.link.delete_confirm'), class: 'confirmation'

- @inspirations.each do |inspiration|
  = link_to inspiration.description, challenge_inspiration_path(@challenge, inspiration)

