.tile-header
  %span.user
    = activity.user.display_name
  - if challenge
    %span.message
      = t('activities.challenge._create.exists')

= image_tag 'default_avatar.png', class: 'user-avatar'

- if challenge
  .speech-bubble
    = challenge.question.html_safe
  %span.time
    = t('activities.index.was')
    #{time activity.created_at, class: :timeago}
