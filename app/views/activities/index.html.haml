- content_for :javascript do
  = javascript_include_tag 'endless_scroll'

= title t('.title')
%nav
  = link_to new_challenge_path, { class: 'btn btn-title', id: 'new-challenge' } do
    .icon-plus
  = link_to t('.link.all_challenges'), challenges_path, class: 'btn btn-title', id: 'all-challenges'

#list
  #activities
    = render @activities

  = paginate @activities
