= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %i.icon-user
  = f.input_field :login, autofocus: true, placeholder: t('simple_form.sign_in.login')
  %i.icon-key
  = f.input_field :password, placeholder: t('simple_form.sign_in.password')

  -# if devise_mapping.rememberable?
    = f.input :remember_me, as: :boolean

  %button{type: 'submit', class: 'green-button', id: 'login-button'}
    .login-text= t('simple_form.sign_in.button')

  -#= render "devise/shared/links"