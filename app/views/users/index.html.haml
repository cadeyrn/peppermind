= title t('.title')
%nav
  = link_to t('.link.challenges'), challenges_path, class: 'btn btn-title left'
  = link_to new_challenge_path, { class: 'btn btn-title right' } do
    .icon-plus{ title: t('.button') }

#list
  #users
    - @users.each do |user|
      = link_to user_path(user) do
        .user
          = image_tag avatar(user, 70), alt: '', class: 'user-avatar'
          .text
            .name= user.display_name
            .level
              = t('.level')
              %span= user.level
            .points
              = t('.points')
              %span= user.points
          .icon-chevron-right
